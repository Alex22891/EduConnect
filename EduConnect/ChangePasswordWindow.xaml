<Controls:MetroWindow  xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="EduConnect.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduConnect"
        mc:Ignorable="d"
        Title="Изменения пароля" Height="256" Width="346" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Изменения пароля" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBox Controls:TextBoxHelper.Watermark="Введите имя пользователя" x:Name="UsernameTextBox" Width="300" Height="30" Margin="0,0,0,10"/>
                <PasswordBox Controls:TextBoxHelper.Watermark="Введите пароль" x:Name="NewPasswordBox" Width="300" Height="30" Margin="0,0,0,10"/>

                <Button Content="Изменить пароль" Width="150" Height="40" Background="#007ACC" Foreground="White" Margin="0,0,0,10" Click="ChangePasswordButton_Click"/>
                <Button Content="Отмена" Width="150" Height="40" Background="#CCCCCC" Foreground="Black" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Controls:MetroWindow>
